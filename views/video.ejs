</head>
<body>
  <!-- Left Panel -->

  <aside id="left-panel" class="left-panel">
      <% include partials/menu %>
  </aside><!-- /#left-panel -->

  <!-- Left Panel -->

  <!-- Right Panel -->

  <div id="right-panel" class="right-panel">

    <!-- Header-->
    <% include partials/header %>
    <!-- /header -->

    <div class="breadcrumbs">
      <div class="breadcrumbs-inner">
        <div class="row m-0">
          <div class="col-sm-4">
            <div class="page-header float-left">
              <div class="page-title">
                <h1>Dashboard</h1>
              </div>
            </div>
          </div>
          <div class="col-sm-8">
            <div class="page-header float-right">
              <div class="page-title">
                <ol class="breadcrumb text-right">
                  <li><a href="#">Dashboard</a></li>
                  <li><a href="#">Campañas</a></li>
                  <li class="active">Videos</li>
                </ol>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="content">
      <div class="animated fadeIn">


        <div class="row">
          <div class="col-lg-6">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Agregar video</strong>
              </div>
              <div class="card-body">
                <div class="card-title">
                  <h3 class="text-center">Elije el archivo</h3>
                </div>
                <hr>
                <form action="#" method="post" novalidate="novalidate">
                  <div class="form-group text-center">
                    <input name="file" type="file" id="file" class="feedback-input">
                  </div>
                  <div class="form-group">
                    <label for="cc-payment" class="control-label mb-1">Código</label>
                    <input id="cc-payment" name="cc-payment" type="text" class="form-control" aria-required="true" aria-invalid="false" placeholder="ALP0001">
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3"><label class=" form-control-label">Orientación</label></div>
                    <div class="col col-md-9">
                      <div class="form-check">
                        <div class="radio">
                          <label for="radio1" class="form-check-label ">
                            <input type="radio" id="radio1" name="radios" value="option1" class="form-check-input" checked>Auto
                          </label>
                        </div>
                        <div class="radio">
                          <label for="radio2" class="form-check-label ">
                            <input type="radio" id="radio2" name="radios" value="option2" class="form-check-input">Vertical
                          </label>
                        </div>
                        <div class="radio">
                          <label for="radio3" class="form-check-label ">
                            <input type="radio" id="radio3" name="radios" value="option3" class="form-check-input">Horizontal
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3"><label class=" form-control-label">Rango de edad</label></div>
                    <div class="col col-md-9">
                      <div class="form-check">
                        <div class="form-group">
                          <input id="cc-payment" name="cc-payment" type="number" class="form-control" aria-required="true" aria-invalid="false" placeholder="0">
                        </div>
                        <div class="form-group">
                          <input id="cc-payment" name="cc-payment" type="number" class="form-control" aria-required="true" aria-invalid="false" placeholder="150">
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3"><label class=" form-control-label">Género</label></div>
                    <div class="col col-md-9">
                      <div class="form-check">
                        <div class="radio">
                          <label for="generoRadio1" class="form-check-label ">
                            <input type="radio" id="generoRadio1" name="generoRadios" value="option1" class="form-check-input" checked>Todos
                          </label>
                        </div>
                        <div class="radio">
                          <label for="generoRadio2" class="form-check-label ">
                            <input type="radio" id="generoRadio2" name="generoRadios" value="option2" class="form-check-input">F
                          </label>
                        </div>
                        <div class="radio">
                          <label for="generoRadio3" class="form-check-label ">
                            <input type="radio" id="generoRadio3" name="generoRadios" value="option3" class="form-check-input">M
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row form-group">
                    <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">SKUs</label></div>
                    <div class="col-12 col-md-9"><textarea name="textarea-input" id="textarea-input" rows="9" placeholder="43456, 23212, 434456" class="form-control"></textarea></div>
                  </div>
                  <div>
                    <button id="payment-button" type="submit" class="btn btn-lg btn-success btn-block">
                      <i class="fa fa-arrow-up fa-lg"></i>&nbsp;
                      <span id="payment-button-amount">Cargar video</span>
                      <span id="payment-button-sending" style="display:none;">Cargando...</span>
                    </button>
                  </div>
                </form>
              </div>
            </div> <!-- .card -->

          </div><!--/.col-->

          <div class="col-lg-6">
            <div class="card">
              <div class="card-header"><strong>Eliminar video(s)</strong></div>
              <div class="card-body card-block">
                <div class="card-title">
                  <h3 class="text-center">Ingresa los códigos</h3>
                </div>
                <hr>
                <div class="row form-group">
                  <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Códigos</label></div>
                  <div class="col-12 col-md-9"><textarea name="textarea-input" id="textarea-input" rows="9" placeholder="ALP0001, ALP0002, ALP0003" class="form-control"></textarea></div>
                </div>
                <div>
                  <button id="payment-button" type="submit" class="btn btn-lg btn-danger btn-block">
                    <i class="fa fa-times fa-lg"></i>&nbsp;
                    <span id="payment-button-amount">Eliminar video(s)</span>
                    <span id="payment-button-sending" style="display:none;">Eliminando...</span>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="col-lg-12">
            <div class="card">
              <div class="card-header">
                <strong class="card-title">Videos cargados</strong>
              </div>
              <div class="card-body">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th scope="col"><input onChange="checkAllVideo(this);" type="checkbox" id="vid0" name="vid0" value="check"></th>
                      <th scope="col">Código</th>
                      <th scope="col">Formato</th>
                      <th scope="col">Fecha</th>
                      <th scope="col">Tamaño</th>
                      <th scope="col">Ancho</th>
                      <th scope="col">Alto</th>
                      <th scope="col">Orientación</th>
                      <th scope="col">Edad</th>
                      <th scope="col">Género</th>
                      <th scope="col">SKUs</th>
                      <th scope="col">Visualizar</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td><input type="checkbox" id="vid1" name="vid1" value="check"></td>
                      <th scope="row">ALP0001</th>
                      <td>MP4</td>
                      <td>21/06/2019</td>
                      <td>35 MB</td>
                      <td>1920</td>
                      <td>1080</td>
                      <td>Horizontal</td>
                      <td>0 - 15</td>
                      <td>M</td>
                      <td>23456<br/>12345</td>
                      <td><a href="#"><i class="fa fa-external-link"></i> Ver</a></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="vid2" name="vid2" value="check"></td>
                      <th scope="row">ALP0002</th>
                      <td>AVI</td>
                      <td>20/06/2019</td>
                      <td>105 MB</td>
                      <td>1920</td>
                      <td>1080</td>
                      <td>Horizontal</td>
                      <td>30 - 45</td>
                      <td>Todos</td>
                      <td>12345<br/>82345</td>
                      <td><a href="#"><i class="fa fa-external-link"></i> Ver</a></td>
                    </tr>
                    <tr>
                      <td><input type="checkbox" id="vid3" name="vid3" value="check"></td>
                      <th scope="row">ALP0003</th>
                      <td>MKV</td>
                      <td>19/06/2019</td>
                      <td>104 MB</td>
                      <td>1080</td>
                      <td>1920</td>
                      <td>Vertical</td>
                      <td>0 - 60</td>
                      <td>F</td>
                      <td>76543<br/>6543</td>
                      <td><a href="#"><i class="fa fa-external-link"></i> Ver</a></td>
                    </tr>
                  </tbody>
                </table>
                <div>
                  <button id="payment-button" type="submit" class="btn btn-lg btn-danger btn-block">
                    <i class="fa fa-times fa-lg"></i>&nbsp;
                    <span id="payment-button-amount">Eliminar selección</span>
                    <span id="payment-button-sending" style="display:none;">Eliminando...</span>
                  </button>
                </div>
              </div>

            </div>
          </div>
        </div>


      </div><!-- .animated -->
    </div><!-- .content -->

    <div class="clearfix"></div>


  </div><!-- /#right-panel -->

  <!-- Right Panel -->

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@2.2.4/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.4/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
  <script src="js/main.js"></script>

  <script>
    var vid1Check = document.getElementById('vid1');
    var vid2Check = document.getElementById('vid2');
    var vid3Check = document.getElementById('vid3');

    function checkAllVideo(elemento){
      if(elemento.checked){
        vid1Check.checked = true;
        vid2Check.checked = true;
        vid3Check.checked = true;
      }else{
        vid1Check.checked = false;
        vid2Check.checked = false;
        vid3Check.checked = false;
      }
    }
  </script>


</body>
</html>
